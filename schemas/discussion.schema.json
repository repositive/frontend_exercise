{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Discussion",
    "description": "Defines the format of the GET /discussion/<id> endpoint",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "user_id": {
            "type": "string"
        },
        "text": {
            "type": "string"
        },
        "model": {
            "enum": ["dataset", "request"]
        },
        "model_id": {
            "type": "string"
        },
        "created_at": {
            "type": "string"
        }
    },
    "required": [
        "id",
        "user_id",
        "text",
        "model",
        "model_id",
        "created_at"
    ]
}
