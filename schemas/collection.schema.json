{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Collection",
    "description": "Defines the format of the GET /collection/<id> endpoint",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "short_description": {
            "type": "string"
        },
        "icon": {
            "type": "string"
        },
        "created_at": {
            "type": "string"
        }
    },
    "required": [
        "id",
        "name",
        "description",
        "icon",
        "created_at"
    ]
}
